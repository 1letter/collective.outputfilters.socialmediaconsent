<div xmlns="http://www.w3.org/1999/xhtml"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     lang="en"
     xml:lang="en"
     tal:omit-tag=""
     i18n:domain="collective.outputfilters.socialmediaconsent"
>
  <div class="form-check placeholder-socialmedia-consent placeholder-socialmedia-consent-thirdparty"
       data-cos="${options/cos}"
  >
    <input class="form-check-input socialmedia-consent-check socialmedia-consent-check-thirdparty"
           id="check-thirdparty"
           type="checkbox"
           value="show"
    />

    <label class="form-check-label"
           for="check-thirdparty"
           i18n:translate="cos_settings_thirdparty"
    >I agree that content from Third Party Services may be displayed to me. I am aware that third-party cookies are used and expressly consent to their use.</label>
    <a href="${options/settings_url}"
       i18n:translate=""
    >My Cookie Settings</a>
  </div>
</div>
